<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KissanguaDetailsActivity">

    <ImageView
        android:id="@+id/kissangua_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/kissangua_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kissangua"
        android:textStyle="bold"
        android:textSize="@dimen/kissangua_title_size"
        android:layout_margin="@dimen/kissangua_text_margin"
        app:layout_constraintTop_toBottomOf="@id/kissangua_image"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/kissangua_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/kissangua_text_size"
        android:layout_margin="@dimen/kissangua_text_margin"
        app:layout_constraintTop_toBottomOf="@id/kissangua_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>